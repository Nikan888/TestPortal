@model WebApplication1.ViewModels.CreateQuestionViewModel
@{
    ViewBag.Title = "Добавление вопроса";
}

<script type="text/javascript">
    function ChangeRadio(p)
    {
        if (document.getElementById("sel").value == "Один правильный")
        {
            for (var i = 1; i < 5; i++)
            {
                if (i != p)
                {
                    document.getElementById("v" + i).checked = false;
                    //document.getElementById("v" + p).value = "false";
                }
            }
        }
    }
</script>

<form asp-action="CreateQuestion" asp-controller="TestsManager">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="TestId" type="hidden" value="@ViewBag.TestId" />
    <div class="form-group">
        <label asp-for="Text" class="control-label">Текст вопроса</label>
        <textarea asp-for="Text"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label">Тип</label>
        <select asp-for="Type" id="sel">
            <option value="Один правильный" selected>Один вариант</option>
            <option value="Несколько правильных">Несколько</option>
        </select>
    </div>
    <div id="variants">
        <div class="form-group">
            <label asp-for="Variant1" class="control-label">Вариант 1</label>
            <input type="text" asp-for="Variant1" />
            <input type="checkbox" asp-for="Var1IsCorrect" onchange="ChangeRadio(1)" id="v1" />
        </div>
        <div class="form-group">
            <label asp-for="Variant2" class="control-label">Вариант 2</label>
            <input type="text" asp-for="Variant2" />
            <input type="checkbox" asp-for="Var2IsCorrect" onchange="ChangeRadio(2)" id="v2" />
        </div>
        <div class="form-group">
            <label asp-for="Variant3" class="control-label">Вариант 3</label>
            <input type="text" asp-for="Variant3" />
            <input type="checkbox" asp-for="Var3IsCorrect" onchange="ChangeRadio(3)" id="v3" />
        </div>
        <div class="form-group">
            <label asp-for="Variant4" class="control-label">Вариант 4</label>
            <input type="text" asp-for="Variant4" />
            <input type="checkbox" asp-for="Var4IsCorrect" onchange="ChangeRadio(4)" id="v4" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>